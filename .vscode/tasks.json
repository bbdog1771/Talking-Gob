{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "C/C++: g++.exe build active file",
            "command": "C:/MinGW/bin/g++.exe",
            "args": [
                "-g",
                "-std=c++17",
                "-I${workspaceFolder}\\include",
                "-L${workspaceFolder}\\lib",
                "${workspaceFolder}\\src\\main.cpp",
                "${workspaceFolder}\\src\\glad.c",
                "-lglfw3dll",
                "-o",
                "${workspaceFolder}\\bin\\app.exe"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "presentation": {
                "reveal": "always",
                "close": false
            },
        }
    ]
}